<%- include('partials/headere.ejs') %>
<%- include('partials/empnave.ejs')  %>

<div class="main-container">
    <h1 class="page-title text-center mb-4">Add a new Food Item</h1>
    
    <div class="form-container">
        <form id="addItemForm" action="/add-item" method="POST">
            <input type="hidden" name="eatery" value="<%= eatery %>">
            
            <div class="form-group mb-4">
                <label for="itemName" class="form-label">Item Name</label>
                <input type="text" class="form-control" id="itemName" name="name" required>
            </div>

            <div class="form-group mb-4">
                <label for="itemPrice" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">â‚¹</span>
                    <input type="number" class="form-control" id="itemPrice" name="price" min="0" step="0.01" required>
                </div>
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Item Type</label>
                <div class="d-flex gap-4">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="veg" id="veg" value="true" checked>
                        <label class="form-check-label" for="veg">
                            Veg
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="veg" id="nonveg" value="false">
                        <label class="form-check-label" for="nonveg">
                            Non-Veg
                        </label>
                    </div>
                </div>
            </div>

            <div class="button-group">
                <button type="submit" class="btn btn-primary submit-btn">Submit</button>
                <button type="reset" class="btn btn-secondary reset-btn">Reset</button>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        overflow-y: auto !important;
        min-height: 100vh;
    }

    .main-container {
        padding: 100px 20px 20px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .page-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #333;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
    }

    .form-container {
        background: white;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        width: 100%;
        max-width: 500px;
        margin-top: 20px;
    }

    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 8px;
    }

    .form-control {
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
    }

    .input-group {
        display: flex;
        align-items: center;
    }

    .input-group-text {
        background: #f8f9fa;
        border: 1px solid #ddd;
        border-right: none;
        padding: 12px;
        border-radius: 8px 0 0 8px;
        color: #333;
    }

    .input-group .form-control {
        border-radius: 0 8px 8px 0;
    }

    .button-group {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
    }

    .submit-btn, .reset-btn {
        padding: 12px 30px;
        font-size: 1.1rem;
        border-radius: 25px;
        transition: all 0.3s ease;
        min-width: 120px;
    }

    .submit-btn {
        background: #007bff;
        border: none;
    }

    .reset-btn {
        background: #6c757d;
        border: none;
    }

    .submit-btn:hover, .reset-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }

        .form-container {
            padding: 20px;
            margin: 20px;
        }

        .button-group {
            flex-direction: column;
        }

        .submit-btn, .reset-btn {
            width: 100%;
        }
    }
</style>

<script>
    document.getElementById('addItemForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = {
            eatery: this.eatery.value,
            name: this.name.value,
            price: parseFloat(this.price.value),
            veg: this.veg.value === 'true'
        };

        try {
            const response = await fetch('/add-item', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData)
            });
            
            if (response.ok) {
                alert('Item added successfully!');
                window.location.href = '/menu';
            } else {
                throw new Error('Failed to add item');
            }
        } catch (error) {
            console.error('Error adding item:', error);
            alert('Failed to add item. Please try again.');
        }
    });
</script>

